<div class="on-menu">
  <h2><span class="blue">Menu</span> for Today !!!</h2>
  <p>Try something Delicious ! </p>
     
  <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
    {{#each data}}      
    <div class="col item-card">
      <div class="card shadow-sm">  
        <form action="/menu/mealKit" method="post" enctype="multipart/form-data">
       <input type="text" class="form-control food-title hide" name="mealId" id="mealId" value="{{_id}}" readonly/>      
        <div class="card-img item-img">
          <img src="{{cover}}" alt="Picture uploaded successfully but sorry work in progress"/>
        </div>

        <div class="card-body">
          <h4 class="food-title">{{this.name}}</h4>
          <p>{{this.ingredients}}</p>
          <p class="card-text">{{this.description}}</p>
          <p class="calories text-muted">Calories : {{this.calories}}</p>
          
          <div class="d-flex justify-content-between align-items-center">
             <span class="price">{{this.currency}} {{this.price}}</span>
              <div class="btn-group">
              <button type="submit"> Order Now </button>            
              </div>
           </div>
        </div>
        </form>
      </div>
    </div>
    
      {{/each}}
  </div>
   
</div>